<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="logo_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/bigText</item>
    </style>

    <style name="first_tv_select_type">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="another_tv_select_type">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="main_image_content_page">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_main_image_content_page</item>
    </style>

    <style name="item_additional_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/end_margin_select_item</item>
    </style>

    <style name="icon_of_item_additional_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/icon_margin</item>
        <item name="android:contentDescription">@string/select</item>
    </style>

    <style name="text_of_item_additional_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:layout_marginStart">@dimen/start_margin</item>
    </style>

    <style name="tv_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/side_margin_tv_content</item>
        <item name="android:layout_marginEnd">@dimen/side_margin_tv_content</item>
        <item name="android:layout_marginBottom">@dimen/bot_margin_tv_content</item>
        <item name="android:layout_marginTop">@dimen/top_margin_tv_content</item>
    </style>

    <style name="im_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/side_margin_tv_content</item>
        <item name="android:layout_marginEnd">@dimen/side_margin_tv_content</item>
        <item name="android:layout_height">270dp</item>
    </style>

    <style name="separate_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_text</item>
    </style>
</resources>