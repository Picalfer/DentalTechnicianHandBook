<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/item_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/bot_margin_tv_content">

        <ImageView
            android:id="@+id/im1"
            style="@style/im_content" />

        <TextView
            android:id="@+id/tv1"
            style="@style/tv_content" />

        <ImageView
            android:id="@+id/im2"
            style="@style/im_content" />

        <TextView
            android:id="@+id/tv2"
            style="@style/tv_content" />

        <ImageView
            android:id="@+id/im3"
            style="@style/im_content" />

        <TextView
            android:id="@+id/tv3"
            style="@style/tv_content" />

        <ImageView
            android:id="@+id/im4"
            android:visibility="gone"
            style="@style/im_content" />

        <TextView
            android:id="@+id/tv4"
            android:visibility="gone"
            style="@style/tv_content" />

    </LinearLayout>
</FrameLayout>